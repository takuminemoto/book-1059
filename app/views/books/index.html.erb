<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <div class="text-center">
      <h2>ユーザー情報</h2></div>
      <%= render 'users/info', user: current_user %>
      <h4 class="timeline-title">タイムライン</h4>
      <%= render 'books/tabs', books: @timeline_books %>
      <h1 class="mt-3">新作</h1>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>本 一覧 </h2>
      <%= render 'books/index', books: @books%>
      <h2 class="ranking">< 人気ランキング ></h2>
      <% @all_ranks.each.with_index(1) do |book, i| %>
        <div class="card-group col-md-6 col-lg-3">
          <span class="book-info">第<%= i %>位</span>
          <tr>
            <td>
              <%= book.title %>
            </td>
          </tr>
        </div>
      <% end %>
    </div>
  </div>
</div>