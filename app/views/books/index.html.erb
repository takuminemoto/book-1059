<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-5">
   <%= render 'books/index', book: @book, user: @user %>
  </div>
  <div class='col-md-6 offset-md-1'>
   <h1>本</h1>
    <table class="table table-hover table-inverse">
     <tr>
      <th></th>
      <th>タイトル</th>
      <th>概要</th>
     </tr>
     <% @books.each do |book| %>
      <tr>
       <th>
        <%= link_to image_tag("no_image.jpg", class: "image"), user_path(book.user.id) %>
       </th>
       <th><%= link_to book.title,book_path(book) %></th>
       <th><%= book.body %></th>
      </tr>
     <% end %>
    </table>
  </div>
 </div>
</div>

