<%= form_with model:book,local:true do |f| %>

  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>

  <div class="form-group">
    <%= f.label :概要 %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.submit "更新" ,class: 'btn btn-success' %>
  </div>

<% end %>