<% books.each do |book| %>
  <tr>
    <td>
      <ul>
      <%= link_to book_timeline_path(book.id) do %>
        <li>
          <%= book.title %><br>
          <span clas="ellipsis"><%= book.body %></span>
        </li>
      <% end %>
      </ul>
    </td>
  </tr>
<% end %>

<style>
  ul, ol {
    list-style: none;
  }
  .ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
</style>