<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/index', book: @book, user: @user %>
  </div>
  <div class="col-md-8 offset-md-1" style="background-color: white;">
   <h2>Users</h2>
   <table class="table table-hover table-inverse">
    <tr>
     <th= colspan ="3"></th>
     <th>image</th>
     <th>name</th>
    </tr>
    <% @users.each do |user| %>
     <tr>
      <th>
       <%= attachment_image_tag user, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </th>
      <th><%= user.name %></th>
      <th><%= link_to "Show",user_path(user) %></th>
     </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>