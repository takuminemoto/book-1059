<table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no-image.jpg") %>
        </td>
        <td><%= user.name %></td>
        <td>
          <%= link_to '詳細', user_path(user), class: "user_#{user.id}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
