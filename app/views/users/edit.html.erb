<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="button_wrapper">
        <button type="button" class="btn btn-dark btn-md">
          <h2>本人情報</h2>
        </button>
      </div>
      <p></p>
      <%= form_with model:@user, local:true do |f| %>
  
        <%= render 'layouts/errors', obj: @user %>
  
        <div class="form-group">
        　<%= f.label :名前 %>
        　<%= f.text_field :name, class: "form-control name" %>
        </div>
  
        <div class="form-group">
        　<%= f.label :紹介 %>
        　<%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
  
        <div class="form-group">
          <%= f.submit "アップデート" ,class: 'btn btn-success' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>