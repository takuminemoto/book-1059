<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-5">
   <%= render 'books/index', book: @book, user: @user %>
  </div>
  <div class='col-md-6 offset-md-1'>
  <h2>本</h2>
   <table class='table table-hover table-inverse'>
    <tr>
     <th= colspan ="3"></th>
     <th></th>
     <th>タイトル</th>
     <th>紹介</th>
    </tr>
    <% @books.each do |book| %>
     <tr>
      <td>
       <%= link_to user_path(book.user.id) do %>
       <%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
       <% end %>
      </td>
      <td><%= link_to book.title,book_path(book) %></td>
      <td><%= book.body %></td>
     </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>

