<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table>
        <tbody>
          <tr>
            <td class="text-center">名前</td>
            <td><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="text-center">内容</td>
            <td><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>

      <%= form_with model:@contact, url:contacts_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '送信' %></div>
      <% end %>
      <p></p>
      <%= form_with model:@contact, url:back_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '入力画面に戻る' %></div>
      <% end %>
    </div>
  </div>
</div>