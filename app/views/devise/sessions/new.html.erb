<div class="container"> 
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <h1>ログイン</h1>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
     <div class="field">
       <%= f.label :Eメール %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
     <p></p>
     <div class="field">
       <%= f.label :パスワード %><br />
       <%= f.password_field :password, autocomplete: "current-password" %>
     </div>
     <% if devise_mapping.rememberable? %>
       <div class="field">
         <%= f.check_box :remember_me %>
         <%= f.label :パスワード保存 %>
       </div>
     <% end %>
     <p></p>
     <div class="actions">
       <%= f.submit "ログイン" ,class: 'btn btn-sm btn-secondary' %>
     </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>  
    
 
